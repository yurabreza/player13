<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.example.yurab.player13.MainActivity">



        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="110dp"
            android:clipToPadding="true">

        </android.support.v7.widget.RecyclerView>


    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:orientation="vertical">


        <SeekBar
            android:id="@+id/seekBar_AM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/twzeroTime_AM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="00:00" />

            <TextView
                android:id="@+id/twCurTime_AM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="end"
                android:hint="00:00" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ibPrevious_AM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/ic_rewind" />

            <ImageButton
                android:id="@+id/ibfastrewind_AM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/ic_fastrewind" />

            <ImageButton
                android:id="@+id/ibPausePlay_AM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/ic_play" />

            <ImageButton
                android:id="@+id/ibfastforward_AM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/image_margin"
                android:background="@drawable/ic_fastforward" />

            <ImageButton
                android:id="@+id/ibNext_AM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/image_margin"
                android:background="@drawable/ic_forward" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
